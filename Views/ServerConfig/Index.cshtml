@model SSISAnalyticsDashboard.Models.ServerConfigViewModel
@{
    ViewData["Title"] = "Server Configuration";
    Layout = "_Layout";
}

<style>
    .config-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .config-card {
        max-width: 600px;
        width: 100%;
        animation: slideUp 0.5s ease-out;
    }
    
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .server-icon {
        font-size: 4rem;
        color: #667eea;
        animation: pulse 2s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
    }
</style>

<div class="config-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg config-card">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-server server-icon"></i>
                            <h2 class="mt-3">SQL Server Configuration</h2>
                            <p class="text-muted">Configure your SQL Server connection to get started</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <strong>Error!</strong> @Model.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (Model.IsConfigured)
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle-fill"></i>
                                <strong>Connected!</strong> Currently configured with: <strong>@Model.ServerName</strong>
                            </div>
                        }

                        <form asp-action="Index" method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            
                            <div class="mb-4">
                                <label asp-for="AuthenticationMode" class="form-label">
                                    <i class="bi bi-shield-check"></i> Authentication Mode
                                </label>
                                <select asp-for="AuthenticationMode" class="form-select form-select-lg" id="authMode" onchange="toggleAuthFields()">
                                    <option value="Windows">Windows Authentication</option>
                                    <option value="SQL">SQL Server Authentication</option>
                                </select>
                                <span asp-validation-for="AuthenticationMode" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> 
                                    Select your authentication method
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ServerName" class="form-label">
                                    <i class="bi bi-hdd-network"></i> SQL Server Instance Name
                                </label>
                                <input asp-for="ServerName" 
                                       class="form-control form-control-lg" 
                                       placeholder="e.g., localhost, .\SQLEXPRESS, SERVER\INSTANCE"
                                       required />
                                <span asp-validation-for="ServerName" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> 
                                    Enter your SQL Server instance name
                                </div>
                            </div>

                            <div id="sqlAuthFields" style="display: none;">
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">
                                        <i class="bi bi-person"></i> Username
                                    </label>
                                    <input asp-for="Username" 
                                           class="form-control form-control-lg" 
                                           placeholder="SQL Server username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Password" class="form-label">
                                        <i class="bi bi-key"></i> Password
                                    </label>
                                    <input asp-for="Password" 
                                           type="password"
                                           class="form-control form-control-lg" 
                                           placeholder="SQL Server password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="TestConnection" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       checked />
                                <label asp-for="TestConnection" class="form-check-label">
                                    Test connection before saving
                                </label>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle"></i> Configure & Connect
                                </button>
                                
                                @if (Model.IsConfigured)
                                {
                                    <a href="/Dashboard/Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-speedometer2"></i> Go to Dashboard
                                    </a>
                                }
                            </div>
                        </form>

                        <div class="mt-4 p-3 bg-light rounded">
                            <h6 class="mb-2"><i class="bi bi-shield-lock"></i> Security Information</h6>
                            <ul class="small text-muted mb-0" id="securityInfo">
                                <li>Using Windows Authentication (Integrated Security)</li>
                                <li>Connecting to SSISDB catalog database</li>
                                <li>Connection string saved to appsettings.json</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <small class="text-white">
                        <i class="bi bi-info-circle"></i> 
                        Make sure you have access to the SSISDB database on your SQL Server
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Toggle authentication fields based on selected mode
        function toggleAuthFields() {
            const authMode = document.getElementById('authMode').value;
            const sqlAuthFields = document.getElementById('sqlAuthFields');
            const securityInfo = document.getElementById('securityInfo');
            
            if (authMode === 'SQL') {
                sqlAuthFields.style.display = 'block';
                securityInfo.innerHTML = `
                    <li>Using SQL Server Authentication</li>
                    <li>Credentials are encrypted in connection string</li>
                    <li>Connecting to SSISDB catalog database</li>
                    <li>Connection string saved to appsettings.json</li>
                `;
            } else {
                sqlAuthFields.style.display = 'none';
                securityInfo.innerHTML = `
                    <li>Using Windows Authentication (Integrated Security)</li>
                    <li>Connecting to SSISDB catalog database</li>
                    <li>Connection string saved to appsettings.json</li>
                `;
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleAuthFields();
        });

        // Bootstrap form validation
        (function() {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
