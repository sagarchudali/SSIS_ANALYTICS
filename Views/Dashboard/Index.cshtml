        // Update all dashboard data
        async function refreshDashboard() {
            console.log('ðŸ”„ Refreshing dashboard data with filter:', currentFilter.businessUnit || 'None');
            
            // Preserve current filter and reload
            if (currentFilter.businessUnit) {
